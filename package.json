{
  "name": "superapi-tui",
  "version": "0.1.1",
  "description": "TUI for browsing and interacting with OpenAPI v3.0/v3.1 specs",
  "type": "module",
  "main": "./dist/cli.js",
  "bin": {
    "superapi-tui": "dist/cli.js"
  },
  "files": [
    "dist/",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev": "bun run src/cli.tsx",
    "build": "bun run build.ts",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx}'",
    "prepublishOnly": "bun run build"
  },
  "keywords": ["openapi", "swagger", "tui", "terminal", "cli", "api"],
  "author": "StanMarek",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/StanMarek/superapi-tui.git"
  },
  "homepage": "https://github.com/StanMarek/superapi-tui#readme",
  "bugs": {
    "url": "https://github.com/StanMarek/superapi-tui/issues"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@inkjs/ui": "^2.0.0",
    "@scalar/openapi-parser": "^0.24.13",
    "ajv": "^8.18.0",
    "ink": "^6.8.0",
    "react": "^19.2.4",
    "smol-toml": "^1.6.0",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/react": "^19.2.14",
    "bun-types": "^1.3.9",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "ink-testing-library": "^4.0.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0"
  }
}
